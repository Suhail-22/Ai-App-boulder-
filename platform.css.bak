/* bolt-theme.css - تصميم مثل bolt.new */

/* الوضع الفاتح - الافتراضي */
:root {
    --bolt-primary: #0070f3;
    --bolt-primary-dark: #0051cc;
    --bolt-secondary: #7928ca;
    --bolt-success: #17c964;
    --bolt-warning: #f5a623;
    --bolt-error: #f31260;
    --bolt-text-primary: #000000;
    --bolt-text-secondary: #666666;
    --bolt-text-muted: #999999;
    --bolt-bg-primary: #ffffff;
    --bolt-bg-secondary: #f8f9fa;
    --bolt-bg-tertiary: #f1f3f5;
    --bolt-border: #e1e5e9;
    --bolt-border-hover: #0070f3;
    --bolt-shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.1);
    --bolt-shadow-md: 0 4px 20px rgba(0, 0, 0, 0.15);
    --bolt-shadow-lg: 0 8px 40px rgba(0, 0, 0, 0.2);
    --bolt-radius-sm: 6px;
    --bolt-radius-md: 10px;
    --bolt-radius-lg: 14px;
    --bolt-font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --bolt-font-mono: 'JetBrains Mono', 'Fira Code', monospace;
}

/* الوضع الداكن */
[data-theme="dark"] {
    --bolt-primary: #0070f3;
    --bolt-primary-dark: #68a1ff;
    --bolt-secondary: #7928ca;
    --bolt-success: #17c964;
    --bolt-warning: #f5a623;
    --bolt-error: #f31260;
    --bolt-text-primary: #ffffff;
    --bolt-text-secondary: #a0aec0;
    --bolt-text-muted: #718096;
    --bolt-bg-primary: #1a1d23;
    --bolt-bg-secondary: #2d3748;
    --bolt-bg-tertiary: #4a5568;
    --bolt-border: #4a5568;
    --bolt-border-hover: #0070f3;
}

/* الهيكل العام */
.bolt-platform {
    font-family: var(--bolt-font-sans);
    background: var(--bolt-bg-primary);
    color: var(--bolt-text-primary);
    height: 100vh;
    overflow: hidden;
}

/* الهيدر - مثل bolt.new */
.bolt-header {
    height: 56px;
    border-bottom: 1px solid var(--bolt-border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    background: var(--bolt-bg-primary);
}

.bolt-brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
    font-size: 18px;
}

.bolt-brand-icon {
    color: var(--bolt-primary);
    animation: bolt-pulse 2s infinite;
}

@keyframes bolt-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

.bolt-actions {
    display: flex;
    gap: 10px;
}

/* شريط الأدوات العلوي */
.bolt-toolbar {
    padding: 12px 20px;
    border-bottom: 1px solid var(--bolt-border);
    background: var(--bolt-bg-secondary);
    display: flex;
    gap: 16px;
    overflow-x: auto;
}

.toolbar-section {
    display: flex;
    gap: 8px;
    align-items: center;
}

.toolbar-btn {
    padding: 6px 12px;
    background: var(--bolt-bg-primary);
    border: 1px solid var(--bolt-border);
    border-radius: var(--bolt-radius-sm);
    color: var(--bolt-text-secondary);
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
}

.toolbar-btn:hover {
    border-color: var(--bolt-primary);
    color: var(--bolt-primary);
}

.toolbar-btn.active {
    background: var(--bolt-primary);
    border-color: var(--bolt-primary);
    color: white;
}

.toolbar-btn i {
    margin-left: 4px;
}

/* محرر الشفرات */
.bolt-editor-container {
    display: flex;
    height: calc(100vh - 120px);
}

.bolt-sidebar {
    width: 260px;
    border-right: 1px solid var(--bolt-border);
    background: var(--bolt-bg-secondary);
    overflow-y: auto;
}

.bolt-main {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.bolt-editor-tabs {
    display: flex;
    background: var(--bolt-bg-tertiary);
    border-bottom: 1px solid var(--bolt-border);
    overflow-x: auto;
}

.bolt-tab {
    padding: 12px 16px;
    background: transparent;
    border: none;
    color: var(--bolt-text-secondary);
    font-size: 13px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: 2px solid transparent;
    white-space: nowrap;
}

.bolt-tab:hover {
    color: var(--bolt-text-primary);
}

.bolt-tab.active {
    color: var(--bolt-primary);
    border-bottom-color: var(--bolt-primary);
    background: var(--bolt-bg-primary);
}

.bolt-editor-wrapper {
    flex: 1;
    position: relative;
}

/* Terminal */
.bolt-terminal {
    height: 200px;
    border-top: 1px solid var(--bolt-border);
    background: #1a1a1a;
    font-family: var(--bolt-font-mono);
}

.bolt-terminal-header {
    padding: 8px 16px;
    background: #252525;
    border-bottom: 1px solid #333;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.bolt-terminal-content {
    padding: 12px;
    height: calc(200px - 41px);
    overflow-y: auto;
}

.terminal-line {
    font-size: 13px;
    line-height: 1.5;
    margin-bottom: 4px;
}

.prompt {
    color: #00ff00;
    margin-left: 8px;
}

.command {
    color: #ffffff;
}

.output {
    color: #a0aec0;
    padding-right: 20px;
}

/* اللوحة اليمنى */
.bolt-right-panel {
    width: 340px;
    border-left: 1px solid var(--bolt-border);
    display: flex;
    flex-direction: column;
}

.bolt-preview-container {
    flex: 1;
    border-bottom: 1px solid var(--bolt-border);
}

.bolt-chat-container {
    height: 300px;
}

/* محادثة AI */
.bolt-chat {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
}

.chat-message {
    margin-bottom: 16px;
    display: flex;
    gap: 12px;
}

.chat-message.ai {
    flex-direction: row;
}

.chat-message.user {
    flex-direction: row-reverse;
}

.message-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.message-avatar.ai {
    background: linear-gradient(135deg, var(--bolt-primary), var(--bolt-secondary));
    color: white;
}

.message-avatar.user {
    background: var(--bolt-bg-tertiary);
    color: var(--bolt-text-secondary);
}

.message-content {
    max-width: 80%;
    padding: 12px 16px;
    border-radius: var(--bolt-radius-md);
    font-size: 14px;
    line-height: 1.5;
}

.ai .message-content {
    background: var(--bolt-bg-secondary);
    color: var(--bolt-text-primary);
}

.user .message-content {
    background: var(--bolt-primary);
    color: white;
}

.chat-input-container {
    padding: 16px;
    border-top: 1px solid var(--bolt-border);
}

.chat-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--bolt-border);
    border-radius: var(--bolt-radius-md);
    background: var(--bolt-bg-secondary);
    color: var(--bolt-text-primary);
    font-family: var(--bolt-font-sans);
    font-size: 14px;
}

.chat-input:focus {
    outline: none;
    border-color: var(--bolt-primary);
}

/* المعاينة */
.preview-frame-wrapper {
    height: 100%;
    padding: 16px;
    background: white;
}

.preview-frame {
    width: 100%;
    height: 100%;
    border: none;
    border-radius: var(--bolt-radius-md);
    box-shadow: var(--bolt-shadow-md);
}

/* شريط الحالة */
.bolt-statusbar {
    height: 24px;
    background: var(--bolt-bg-secondary);
    border-top: 1px solid var(--bolt-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 16px;
    font-size: 11px;
    color: var(--bolt-text-muted);
}

.status-item {
    display: flex;
    align-items: center;
    gap: 6px;
}

/* القوالب */
.templates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 16px;
    padding: 16px;
}

.template-card {
    background: var(--bolt-bg-secondary);
    border: 1px solid var(--bolt-border);
    border-radius: var(--bolt-radius-md);
    padding: 20px;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s;
}

.template-card:hover {
    border-color: var(--bolt-primary);
    transform: translateY(-2px);
    box-shadow: var(--bolt-shadow-sm);
}

.template-icon {
    font-size: 24px;
    color: var(--bolt-primary);
    margin-bottom: 12px;
}

.template-name {
    font-weight: 600;
    margin-bottom: 4px;
}

.template-desc {
    font-size: 12px;
    color: var(--bolt-text-secondary);
}

/* التمرير */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: var(--bolt-bg-secondary);
}

::-webkit-scrollbar-thumb {
    background: var(--bolt-border);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--bolt-primary);
}